<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Контейнер для названия команд и даты -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1A3C34">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Название команд -->
                <TextView
                    android:id="@+id/match_teams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Команда A vs Команда B"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal" />

                <!-- Дата матча -->
                <TextView
                    android:id="@+id/match_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дата"
                    android:textSize="14sp"
                    android:textColor="#B0BEC5"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Статистика в CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1A3C34">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Владение мячом -->
                <TextView
                    android:id="@+id/possession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Владение мячом: Команда A 55% - Команда B 45%"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:drawableStart="@drawable/ic_possession"
                    android:drawablePadding="12dp"
                    android:paddingVertical="8dp" />

                <!-- Удары в створ -->
                <TextView
                    android:id="@+id/shots_on_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Удары в створ: Команда A 10 - Команда B 8"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_shots_on_goal"
                    android:drawablePadding="12dp"
                    android:paddingVertical="8dp" />

                <!-- Удары мимо -->
                <TextView
                    android:id="@+id/shots_off_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Удары мимо: Команда A 5 - Команда B 3"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_shots_off_goal"
                    android:drawablePadding="12dp"
                    android:paddingVertical="8dp" />

                <!-- Угловые -->
                <TextView
                    android:id="@+id/corners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Угловые: Команда A 6 - Команда B 4"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_corners"
                    android:drawablePadding="12dp"
                    android:paddingVertical="8dp" />

                <!-- Фолы -->
                <TextView
                    android:id="@+id/fouls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фолы: Команда A 12 - Команда B 15"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_fouls"
                    android:drawablePadding="12dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>