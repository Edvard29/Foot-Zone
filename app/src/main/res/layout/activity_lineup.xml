<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="FootZone"
        android:titleTextColor="@android:color/white"/>

    <!-- Название домашней команды -->
    <TextView
        android:id="@+id/home_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Team"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/team_info_text_color"
        android:layout_marginTop="16dp"/>

    <!-- Список игроков домашней команды -->
    <TextView
        android:id="@+id/home_team_lineup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Lineup"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"/>

    <!-- Название гостевой команды -->
    <TextView
        android:id="@+id/away_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Away Team"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/team_info_text_color"
        android:layout_marginTop="16dp"/>

    <!-- Список игроков гостевой команды -->
    <TextView
        android:id="@+id/away_team_lineup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Away Lineup"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"/>


</LinearLayout>
